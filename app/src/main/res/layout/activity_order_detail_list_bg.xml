<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        app:cardCornerRadius="@dimen/margin5"
        app:cardElevation="@dimen/margin5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin5"
        android:layout_marginRight="@dimen/margin5"
        android:layout_marginTop="@dimen/margin5"
        android:layout_marginBottom="@dimen/margin5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding10"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtOrderId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_sans_semibold"
                    android:text="Order ID"
                    android:textColor="#373737"
                    android:textSize="@dimen/textSize"
                    android:textStyle="bold" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Order No"
                    android:textColor="#373737"
                    android:fontFamily="@font/nunito_sans_semibold"
                    android:textSize="@dimen/textSizeVerySmall" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#373737"
                    android:fontFamily="@font/nunito_sans_semibold"
                    android:textSize="@dimen/textSizeVerySmall"
                    android:text=":">

                </TextView>

                <TextView
                    android:id="@+id/txtOrderNo"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:text=""
                    android:textColor="#373737"
                    android:fontFamily="@font/nunito_sans_semibold"
                    android:textSize="@dimen/textSizeVerySmall" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding10"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Order Date"
                    android:textColor="#373737"
                    android:fontFamily="@font/nunito_sans_semibold"
                    android:textSize="@dimen/textSizeVerySmall"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#373737"
                    android:fontFamily="@font/nunito_sans_semibold"
                    android:textSize="@dimen/textSizeVerySmall"
                    android:text=":">

                </TextView>

                <TextView
                    android:id="@+id/txtOrderDate"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:text=""
                    android:textColor="#373737"
                    android:fontFamily="@font/nunito_sans_semibold"
                    android:textSize="@dimen/textSizeVerySmall"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Bill Amount"
                    android:textColor="#373737"
                    android:fontFamily="@font/nunito_sans_semibold"
                    android:textSize="@dimen/textSizeVerySmall" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/textSizeVerySmall"
                    android:text=":">

                </TextView>

                <TextView
                    android:id="@+id/txtBillAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/textSizeVerySmall" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding10"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Payment By"
                    android:textColor="#373737"
                    android:fontFamily="@font/nunito_sans_semibold"
                    android:textSize="@dimen/textSizeVerySmall"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#373737"
                    android:fontFamily="@font/nunito_sans_semibold"
                    android:textSize="@dimen/textSizeVerySmall"
                    android:text=":">

                </TextView>

                <TextView
                    android:id="@+id/txtPaymentBy"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:text=""
                    android:textColor="#373737"
                    android:fontFamily="@font/nunito_sans_semibold"
                    android:textSize="@dimen/textSizeVerySmall" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding10"
                android:orientation="horizontal">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total Amount"
                    android:textColor="#373737"
                    android:fontFamily="@font/nunito_sans_semibold"
                    android:textSize="@dimen/textSizeVerySmall"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#373737"
                    android:fontFamily="@font/nunito_sans_semibold"
                    android:textSize="@dimen/textSizeVerySmall"
                    android:gravity="center"
                    android:text=":">

                </TextView>

                <TextView
                    android:id="@+id/txtTotalAmount"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:text=""
                    android:textColor="#373737"
                    android:fontFamily="@font/nunito_sans_semibold"
                    android:textSize="@dimen/textSizeVerySmall"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="#373737">
            </LinearLayout>

            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:fontFamily="@font/nunito_sans_semibold"
                android:text="Click To Check Order Details   >"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/textSizeVerySmall"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>