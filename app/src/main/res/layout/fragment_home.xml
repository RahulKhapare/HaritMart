<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Fragments.HomeFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <!-- <FrameLayout
                 android:layout_width="match_parent"
                 android:layout_height="150dp">

                 <androidx.viewpager2.widget.ViewPager2
                     android:id="@+id/viewPager2"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:background="@color/grey1"/>

                 <com.google.android.material.tabs.TabLayout
                     android:id="@+id/tabLayout"
                     android:layout_width="match_parent"
                     android:layout_height="50dp"
                     android:layout_gravity="bottom"
                     android:layout_marginBottom="-10dp"
                     android:clipToPadding="true"
                     app:tabBackground="@drawable/tab_selector"
                     app:tabGravity="center"
                     app:tabIndicatorColor="@color/transparent"/>

             </FrameLayout>-->

            <FrameLayout
                android:id="@+id/ViewPagerLayout"
                android:layout_width="match_parent"
                android:layout_height="259dp">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPager2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15dp"
                    android:background="@color/white" />

                <!-- <com.google.android.material.tabs.TabLayout
                     android:id="@+id/tabLayout"
                     android:layout_width="match_parent"
                     android:layout_below="@id/viewPager2"
                     android:layout_height="50dp"
                     android:layout_gravity="bottom"
                     android:clipToPadding="true"
                     app:tabBackground="@drawable/tav_selector_green"
                     app:tabGravity="center"
                     app:tabIndicatorColor="@color/transparent"/>-->
                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabLayout"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="0dp"
                    android:clipToPadding="true"
                    app:tabBackground="@drawable/tav_selector_green"
                    app:tabGravity="center"
                    app:tabIndicatorColor="@color/transparent" />

            </FrameLayout>

            <TextView
                android:id="@+id/txtExplore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ViewPagerLayout"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="@dimen/padding10"
                android:fontFamily="@font/product_sans_regular"
                android:text="Explore Category"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/exploreLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtExplore"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/spinnerCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSizeVerySmall"
                    android:gravity="right"
                    android:layout_gravity="right"
                    app:fontFamily="@font/product_sans_regular" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerProductItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin15">

                </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/newArrived"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/exploreLayout"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/product_sans_regular"
                    android:text="New Arrived"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/viewMore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginEnd="15dp"
                    android:fontFamily="@font/product_sans_regular"
                    android:gravity="end|center_vertical"
                    android:text="View More"
                    android:textColor="#FC8F00"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView1"
                android:layout_marginTop="@dimen/padding10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/newArrived"
                android:layout_marginStart="@dimen/padding10" />

        </LinearLayout>
    </ScrollView>
</layout>