<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:context=".BaseActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/cardView1Menu"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:layout_alignParentTop="true"
                android:animateLayoutChanges="true"
                android:background="@color/white"
                android:elevation="3dp">

                <ImageView
                    android:id="@+id/drawerIconImageView"
                    android:layout_width="75dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/clickable_transparent_bg"
                    android:clickable="true"
                    android:onClick="onDrawerMenuClick"
                    android:src="@drawable/group2663" />

                <TextView
                    android:id="@+id/titleNameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="marquee"
                    android:fontFamily="@font/product_sans_regular"
                    android:gravity="center"
                    android:letterSpacing="0.1"
                    android:singleLine="true"
                    android:text="Apt. 445, Motilal Nagar"
                    android:textAllCaps="true"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="?actionBarSize"
                        android:layout_height="match_parent"
                        android:background="@drawable/clickable_transparent_bg"
                        android:clickable="true"
                        android:padding="10dp"
                        android:src="@drawable/ic_notification"
                        android:tint="@color/black" />

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="?actionBarSize"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:background="@drawable/clickable_transparent_bg"
                        android:clickable="true"
                        android:padding="10dp"
                        android:src="@drawable/ic_notificationa"
                        android:tint="@color/black" />
                </LinearLayout>

            </FrameLayout>

              <FrameLayout
                  android:id="@+id/frameLayout"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_above="@id/cardView"
                  android:layout_marginTop="?actionBarSize" />









            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                app:cardElevation="4dp">

                <LinearLayout
                    android:id="@+id/parentLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:animateLayoutChanges="true"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <LinearLayout
                        android:id="@+id/homeLayout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:animateLayoutChanges="true"
                        android:background="@drawable/clickable_transparent_bg"
                        android:clickable="true"
                        android:gravity="center"
                        android:onClick="onBottomBarClick"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:src="@drawable/ic_home_active" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:fontFamily="@font/product_sans_regular"
                            android:gravity="center"
                            android:text="Home"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/searchLayout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:animateLayoutChanges="true"
                        android:background="@drawable/clickable_transparent_bg"
                        android:clickable="true"
                        android:gravity="center"
                        android:onClick="onBottomBarClick"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:src="@drawable/ic_search_inactive" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:fontFamily="@font/product_sans_regular"
                            android:gravity="center"
                            android:text="Search"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/cartLayout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:animateLayoutChanges="true"
                        android:background="@drawable/clickable_transparent_bg"
                        android:clickable="true"
                        android:gravity="center"
                        android:onClick="onBottomBarClick"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="35dp"

                            android:src="@drawable/ic_cart_inactive" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:fontFamily="@font/product_sans_regular"
                            android:gravity="center"
                            android:text="Cart"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/favouriteLayout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:animateLayoutChanges="true"
                        android:background="@drawable/clickable_transparent_bg"
                        android:clickable="true"
                        android:gravity="center"
                        android:onClick="onBottomBarClick"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="35dp"

                            android:src="@drawable/ic_favorite_inactive" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:fontFamily="@font/product_sans_regular"
                            android:gravity="center"
                            android:text="Favourite"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/moreLayout"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:animateLayoutChanges="true"
                        android:background="@drawable/clickable_transparent_bg"
                        android:clickable="true"
                        android:gravity="center"
                        android:onClick="onBottomBarClick"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="35dp"

                            android:src="@drawable/ic_more_inactive" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:fontFamily="@font/product_sans_regular"
                            android:gravity="center"
                            android:text="More"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </LinearLayout>

    <!-- <ScrollView
         android:layout_width="300dp"
         android:layout_height="match_parent"
         android:layout_gravity="start"
         android:layout_marginTop="?actionBarSize"
         android:fillViewport="true">

         <include
             layout="@layout/drawer_layout"
             android:layout_width="match_parent"
             android:layout_height="wrap_content" />

     </ScrollView>-->

</androidx.drawerlayout.widget.DrawerLayout>