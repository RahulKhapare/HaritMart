<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MyAddressActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/green">

        <FrameLayout
            android:id="@+id/frameView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                app:titleTextColor="@color/white"
                app:subtitleTextColor="@color/white"
                android:theme="@style/ToolbarColoredBackArrow"
                android:background="@color/green">

            </androidx.appcompat.widget.Toolbar>

            <com.miguelcatalan.materialsearchview.MaterialSearchView
                android:id="@+id/search_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/frameView"
            android:layout_marginTop="10dp"
            android:background="@drawable/product_bg_card">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:fillViewport="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="0dp"
                        android:padding="20dp"
                        android:orientation="vertical"
                        >

                        <LinearLayout
                            android:id="@+id/lnrTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtTitleMessage"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nunito_sans_semibold"
                                android:textSize="14sp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="0dp"
                                android:text="Search for area landmark or apartment"
                                android:textColor="#373737"></TextView>


                        </LinearLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_margin="10dp"
                            android:id="@+id/cardLocation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            app:cardElevation="5dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_horizontal"
                                    android:drawableLeft="@drawable/ic_baseline_my_location_24"
                                    android:drawablePadding="10dp"
                                    android:fontFamily="@font/nunito_sans_semibold"
                                    android:padding="10dp"
                                    android:text="Choose current location for address"
                                    android:textColor="#373737"
                                    android:textSize="14sp"></TextView>

                            </LinearLayout>


                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:id="@+id/lnrAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:padding="10dp"
                            android:visibility="gone"
                            android:background="@color/grey"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nunito_sans_semibold"
                                android:textSize="14sp"
                                android:text="Save Address"
                                android:textColor="#373737"></TextView>
                            <TextView
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:fontFamily="@font/nunito_sans_semibold"
                                android:textSize="14sp"
                                android:text="+ Add New Address"
                                android:textColor="@color/saffron"></TextView>

                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_marginTop="10dp"
                            android:id="@+id/recyclerAddress"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        </androidx.recyclerview.widget.RecyclerView>

                    </LinearLayout>


            </androidx.core.widget.NestedScrollView>

        </LinearLayout>

    </RelativeLayout>
</layout>