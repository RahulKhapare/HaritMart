<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/green">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/green"
            android:theme="@style/ToolbarColoredBackArrow"
            app:subtitleTextColor="@color/white"
            app:titleTextColor="@color/white"></androidx.appcompat.widget.Toolbar>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:layout_marginTop="10dp"
            android:background="@drawable/product_bg_card">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="20dp">

                    <LinearLayout
                        android:id="@+id/lnrUser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="10dp">

                        <RelativeLayout
                            android:id="@+id/lnrImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/imgUser"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_marginTop="10dp"
                                android:layout_gravity="center_vertical"
                                android:tint="@color/grey1"
                                app:civ_border_width="1dp"
                                app:civ_border_color="@color/black"
                                android:cropToPadding="true"
                                app:civ_circle_background_color="@color/white"
                                android:src="@drawable/ic_baseline_account_circle_24">

                            </de.hdodenhof.circleimageview.CircleImageView>

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="20dp">

                            <TextView
                                android:id="@+id/txtName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nunito_sans_semibold"
                                android:text="ABC"
                                android:textColor="@color/black"
                                android:textSize="20sp"></TextView>

                            <TextView
                                android:id="@+id/txtEmail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/nunito_sans_regular"
                                android:text="abc@gmail.com"
                                android:textColor="#373737"
                                android:textSize="14sp"></TextView>

                            <TextView
                                android:id="@+id/txtNumber"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/nunito_sans_regular"
                                android:text="Mobile Number"
                                android:textColor="#373737"
                                android:textSize="14sp"></TextView>

                        </LinearLayout>


                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/lnrUser"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:orientation="horizontal"
                            android:padding="5dp">

                            <TextView
                                android:id="@+id/txtLocation"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:drawableLeft="@drawable/ic_location_bg"
                                android:drawablePadding="10dp"
                                android:fontFamily="@font/nunito_sans_regular"
                                android:gravity="center_vertical"
                                android:text="Bangur Nagar, Goregao East"
                                android:textColor="#373737"
                                android:textSize="14dp"></TextView>

                            <TextView
                                android:id="@+id/txtChange"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/grey_border1"
                                android:fontFamily="@font/nunito_sans_regular"
                                android:padding="8dp"
                                android:text="Change"
                                android:textColor="@color/saffron">

                            </TextView>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/cardLocation"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/lnrMyOrder"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginLeft="-5dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_my_order_new"></ImageView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="?actionBarSize"
                                android:layout_gravity="center"
                                android:paddingLeft="15dp"
                                android:gravity="center_vertical"
                                android:text="My Order"
                                android:fontFamily="@font/nunito_sans_regular"
                                android:textColor="#373737"
                                android:textSize="16sp" />

                        </LinearLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#EFEFEF" />

                        <LinearLayout
                            android:id="@+id/lnrWallet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="22dp"
                                    android:layout_gravity="center_vertical"
                                    android:src="@drawable/ic_wallet"></ImageView>

                                <TextView
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="?actionBarSize"
                                    android:layout_gravity="center"
                                    android:paddingLeft="15dp"
                                    android:gravity="center_vertical"
                                    android:text="My Wallet"
                                    android:fontFamily="@font/nunito_sans_regular"
                                    android:textColor="#373737"
                                    android:textSize="16sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="?actionBarSize"
                                    android:layout_gravity="center"
                                    android:paddingLeft="10dp"
                                    android:gravity="center_vertical"
                                    android:text="Rs. 0.00"
                                    android:fontFamily="@font/nunito_sans_regular"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="16sp" />

                            </LinearLayout>

                        </LinearLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#EFEFEF" />

                        <LinearLayout
                            android:id="@+id/lnrMyPayment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_payment"></ImageView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="?actionBarSize"
                                android:layout_gravity="center"
                                android:paddingLeft="15dp"
                                android:gravity="center_vertical"
                                android:text="My Payments"
                                android:fontFamily="@font/nunito_sans_regular"
                                android:textColor="#373737"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#EFEFEF" />

                        <LinearLayout
                            android:id="@+id/lnrMyRating"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:paddingLeft="-10dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_rating_new"></ImageView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="?actionBarSize"
                                android:layout_gravity="center"
                                android:paddingLeft="10dp"
                                android:gravity="center_vertical"
                                android:text="My Rating &amp; Review"
                                android:fontFamily="@font/nunito_sans_regular"
                                android:textColor="#373737"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#EFEFEF" />

                        <LinearLayout
                            android:id="@+id/lnrNotifications"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_noti"></ImageView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="?actionBarSize"
                                android:layout_gravity="center"
                                android:paddingLeft="15dp"
                                android:gravity="center_vertical"
                                android:text="Notifications"
                                android:fontFamily="@font/nunito_sans_regular"
                                android:textColor="#373737"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#EFEFEF" />

                        <LinearLayout
                            android:id="@+id/lnrGiftCard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_gift_card"></ImageView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="?actionBarSize"
                                android:layout_gravity="center"
                                android:paddingLeft="15dp"
                                android:gravity="center_vertical"
                                android:text="Gift Card"
                                android:fontFamily="@font/nunito_sans_regular"
                                android:textColor="#373737"
                                android:textSize="16sp" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#EFEFEF" />

                        <LinearLayout
                            android:id="@+id/lnrMyAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_loc"></ImageView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="?actionBarSize"
                                android:layout_gravity="center"
                                android:paddingLeft="15dp"
                                android:gravity="center_vertical"
                                android:text="My delivery Address"
                                android:textColor="#373737"
                                android:fontFamily="@font/nunito_sans_regular"
                                android:textSize="16sp" />

                        </LinearLayout>

<!--                        <View-->
<!--                            android:layout_width="match_parent"-->
<!--                            android:layout_height="1dp"-->
<!--                            android:background="#EFEFEF" />-->

                        <LinearLayout
                            android:id="@+id/lnrChangePass"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_password"></ImageView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="?actionBarSize"
                                android:layout_gravity="center"
                                android:paddingLeft="10dp"
                                android:gravity="center_vertical"
                                android:text="Change Password"
                                android:fontFamily="@font/nunito_sans_semibold"
                                android:textColor="#373737"
                                android:textSize="14sp" />

                        </LinearLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#EFEFEF" />

                        <LinearLayout
                            android:id="@+id/lnrTermCondition"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="visible"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_term_condition"></ImageView>

                            <TextView
                                android:id="@+id/txtTermAndCondition"
                                android:layout_width="match_parent"
                                android:layout_height="?actionBarSize"
                                android:layout_gravity="center"
                                android:paddingLeft="10dp"
                                android:fontFamily="@font/nunito_sans_semibold"
                                android:gravity="center_vertical"
                                android:text="Term And Conditions"
                                android:textColor="#373737"
                                android:textSize="14sp" />

                        </LinearLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#EFEFEF" />

                        <LinearLayout
                            android:id="@+id/lnrLogOut"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:paddingLeft="-10dp"
                                android:tint="@color/black"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_log_out_new"></ImageView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="?actionBarSize"
                                android:layout_gravity="center"
                                android:paddingLeft="5dp"
                                android:gravity="center_vertical"
                                android:text="Logout"
                                android:fontFamily="@font/nunito_sans_regular"
                                android:textColor="#373737"
                                android:textSize="16sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imgEdit"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_margin="10dp"
                        android:src="@drawable/ic_edit_new"
                        android:tint="@color/grey1"></ImageView>

                </RelativeLayout>

            </androidx.core.widget.NestedScrollView>

        </RelativeLayout>


    </RelativeLayout>


</layout>