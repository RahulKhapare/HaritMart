<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/green">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/green"
            android:theme="@style/ToolbarColoredBackArrow"
            app:subtitleTextColor="@color/white"
            app:titleTextColor="@color/white"></androidx.appcompat.widget.Toolbar>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:layout_marginTop="10dp"
            android:background="@drawable/product_bg_card">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="20dp">

                    <LinearLayout
                        android:id="@+id/lnrUser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <RelativeLayout
                            android:id="@+id/lnrImage"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/imgUser"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_gravity="center_vertical"
                                android:tint="@color/grey1"
                                app:civ_border_width="1dp"
                                app:civ_border_color="@color/black"
                                android:cropToPadding="true"
                                app:civ_circle_background_color="@color/white"
                                android:src="@drawable/ic_baseline_account_circle_24">

                            </de.hdodenhof.circleimageview.CircleImageView>

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical"
                            android:paddingLeft="20dp">

                            <TextView
                                android:id="@+id/txtName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nunito_sans_semibold"
                                android:text="User Name"
                                android:textColor="#373737"
                                android:textSize="14sp"></TextView>

                            <TextView
                                android:id="@+id/txtEmail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/nunito_sans_semibold"
                                android:text="Email id"
                                android:textColor="#373737"
                                android:textSize="12sp"></TextView>

                            <TextView
                                android:id="@+id/txtNumber"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/nunito_sans_semibold"
                                android:text="Mobile Number"
                                android:textColor="#373737"
                                android:textSize="12sp"></TextView>

                        </LinearLayout>


                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/lnrUser"
                        android:layout_margin="10dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:orientation="horizontal"
                            android:padding="5dp">

                            <TextView
                                android:id="@+id/txtLocation"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:drawableLeft="@drawable/ic_baseline_location_on_24"
                                android:drawablePadding="5dp"
                                android:fontFamily="@font/nunito_sans_regular"
                                android:gravity="center_vertical"
                                android:text="Bangur Nagar, Goregao East"
                                android:textColor="#373737"
                                android:textSize="12dp"></TextView>

                            <TextView
                                android:id="@+id/txtChange"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/grey_border1"
                                android:fontFamily="@font/nunito_sans_regular"
                                android:padding="8dp"
                                android:text="Change"
                                android:textColor="@color/saffron">

                            </TextView>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/cardLocation"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/lnrMyOrder"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_my_order"></ImageView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="?actionBarSize"
                                android:layout_gravity="center"
                                android:paddingLeft="10dp"
                                android:gravity="center_vertical"
                                android:text="My Order"
                                android:fontFamily="@font/nunito_sans_semibold"
                                android:textColor="#373737"
                                android:textSize="14sp" />

                        </LinearLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#EFEFEF" />

                        <LinearLayout
                            android:id="@+id/lnrWallet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center_vertical"
                                    android:src="@drawable/ic_wallet"></ImageView>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="?actionBarSize"
                                    android:layout_gravity="center"
                                    android:paddingLeft="10dp"
                                    android:gravity="center_vertical"
                                    android:text="Wallet"
                                    android:fontFamily="@font/nunito_sans_semibold"
                                    android:textColor="#373737"
                                    android:textSize="14sp" />

                            </LinearLayout>

                        </LinearLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#EFEFEF" />

                        <LinearLayout
                            android:id="@+id/lnrMyPayment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_payment"></ImageView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="?actionBarSize"
                                android:layout_gravity="center"
                                android:paddingLeft="10dp"
                                android:gravity="center_vertical"
                                android:text="My Payment"
                                android:fontFamily="@font/nunito_sans_semibold"
                                android:textColor="#373737"
                                android:textSize="14sp" />

                        </LinearLayout>

<!--                        <View-->
<!--                            android:layout_width="match_parent"-->
<!--                            android:layout_height="1dp"-->
<!--                            android:background="#EFEFEF" />-->

                        <TextView
                            android:id="@+id/txtRatingReview"
                            android:layout_width="match_parent"
                            android:layout_height="?actionBarSize"
                            android:layout_gravity="center"
                            android:drawableStart="@drawable/ic_group_4461"
                            android:drawablePadding="10dp"
                            android:gravity="center_vertical"
                            android:visibility="gone"
                            android:text="My Ratings \u0026 Review"
                            android:textColor="#373737"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#EFEFEF" />

                        <LinearLayout
                            android:id="@+id/lnrNotifications"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_noti"></ImageView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="?actionBarSize"
                                android:layout_gravity="center"
                                android:paddingLeft="10dp"
                                android:gravity="center_vertical"
                                android:text="Notifications"
                                android:fontFamily="@font/nunito_sans_semibold"
                                android:textColor="#373737"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#EFEFEF" />

                        <LinearLayout
                            android:id="@+id/lnrGiftCard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_gift_card"></ImageView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="?actionBarSize"
                                android:layout_gravity="center"
                                android:paddingLeft="10dp"
                                android:gravity="center_vertical"
                                android:text="Gift Card"
                                android:fontFamily="@font/nunito_sans_semibold"
                                android:textColor="#373737"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#EFEFEF" />

                        <LinearLayout
                            android:id="@+id/lnrMyAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_address"></ImageView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="?actionBarSize"
                                android:layout_gravity="center"
                                android:paddingLeft="10dp"
                                android:gravity="center_vertical"
                                android:text="My delivery Address"
                                android:textColor="#373737"
                                android:fontFamily="@font/nunito_sans_semibold"
                                android:textSize="14sp" />

                        </LinearLayout>

<!--                        <View-->
<!--                            android:layout_width="match_parent"-->
<!--                            android:layout_height="1dp"-->
<!--                            android:background="#EFEFEF" />-->

                        <LinearLayout
                            android:id="@+id/lnrChangePass"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_password"></ImageView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="?actionBarSize"
                                android:layout_gravity="center"
                                android:paddingLeft="10dp"
                                android:gravity="center_vertical"
                                android:text="Change Password"
                                android:fontFamily="@font/nunito_sans_semibold"
                                android:textColor="#373737"
                                android:textSize="14sp" />

                        </LinearLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#EFEFEF" />

                        <LinearLayout
                            android:id="@+id/lnrTermCondition"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_term_condition"></ImageView>

                            <TextView
                                android:id="@+id/txtTermAndCondition"
                                android:layout_width="match_parent"
                                android:layout_height="?actionBarSize"
                                android:layout_gravity="center"
                                android:paddingLeft="10dp"
                                android:fontFamily="@font/nunito_sans_semibold"
                                android:gravity="center_vertical"
                                android:text="Term And Conditions"
                                android:textColor="#373737"
                                android:textSize="14sp" />

                        </LinearLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#EFEFEF" />

                        <LinearLayout
                            android:id="@+id/lnrLogOut"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_log_out"></ImageView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="?actionBarSize"
                                android:layout_gravity="center"
                                android:paddingLeft="10dp"
                                android:gravity="center_vertical"
                                android:text="LogOut"
                                android:fontFamily="@font/nunito_sans_semibold"
                                android:textColor="#373737"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imgEdit"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentRight="true"
                        android:layout_margin="10dp"
                        android:src="@drawable/ic_baseline_edit_24"
                        android:tint="@color/grey1"></ImageView>

                </RelativeLayout>

            </androidx.core.widget.NestedScrollView>

        </RelativeLayout>


    </RelativeLayout>


</layout>