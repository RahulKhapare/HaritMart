<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyAccountActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_green">

        <ImageView
            android:id="@+id/back"
            android:layout_width="?actionBarSize"
            android:layout_height="?actionBarSize"
            android:clickable="true"
            android:onClick="onBackClick"
            android:padding="14dp"
            android:src="@drawable/ic_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="13dp"
            android:layout_toRightOf="@id/back"
            android:text="My Account"
            android:textColor="#ffffff"
            android:textSize="27dp" />


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/imageView"
            android:layout_marginTop="65dp"
            android:layout_marginBottom="-38dp"
            android:background="#f9f9f9"
            app:cardCornerRadius="25dp">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/image"
                            android:layout_width="58dp"
                            android:layout_height="58dp"
                            android:layout_margin="35dp"
                            android:src="#52AC03" />

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="35dp"
                            android:layout_toRightOf="@+id/image"
                            android:text="John Doe"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/name"
                            android:layout_marginTop="5dp"
                            android:layout_toRightOf="@+id/image"
                            android:text="email.abc@example.com"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/email"
                            android:layout_toRightOf="@+id/image"
                            android:text="9912345678"
                            android:textColor="@color/black"
                            android:textSize="16sp" />


                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="55dp"
                            android:layout_toRightOf="@+id/email"
                            android:src="@drawable/ic_pencil" />


                    </RelativeLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_margin="17dp">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="7dp"
                                android:drawableStart="@drawable/ic_position"
                                android:drawablePadding="2dp"
                                android:text="Bangur Nagar Goregaon(West)"
                                android:textColor="@color/black"
                                android:textSize="19sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="11dp"
                                android:layout_marginTop="7dp"
                                android:layout_toRightOf="@+id/address"
                                android:background="@drawable/grey_border1"
                                android:padding="2dp"
                                android:text="change"
                                android:textColor="#FC8F00"
                                android:textSize="19sp" />


                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="?actionBarSize"
                        android:drawableStart="@drawable/ic_history"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:drawablePadding="7dp"
                        android:text="My order"
                        android:gravity="center_vertical"
                        android:textSize="21sp"
                        android:textColor="#373737" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EFEFEF"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="?actionBarSize"
                        android:drawableStart="@drawable/ic_group_4459"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:drawablePadding="7dp"
                        android:text="Wallet"
                        android:gravity="center_vertical"
                        android:textSize="21sp"
                        android:textColor="#373737" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EFEFEF"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="?actionBarSize"
                        android:drawableStart="@drawable/ic_group_4460"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:drawablePadding="7dp"
                        android:text="My Payments"
                        android:gravity="center_vertical"
                        android:textSize="21sp"
                        android:textColor="#373737" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EFEFEF"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="?actionBarSize"
                        android:drawableStart="@drawable/ic_group_4461"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:drawablePadding="7dp"
                        android:text="My Raitings \u0026 Review"
                        android:gravity="center_vertical"
                        android:textSize="21sp"
                        android:textColor="#373737" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EFEFEF"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="?actionBarSize"
                        android:drawableStart="@drawable/ic_group_4462"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:drawablePadding="7dp"
                        android:text="Notification"
                        android:gravity="center_vertical"
                        android:textSize="21sp"
                        android:textColor="#373737" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EFEFEF"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="?actionBarSize"
                        android:drawableStart="@drawable/ic_group_4463"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:drawablePadding="7dp"
                        android:text="Gift Card"
                        android:gravity="center_vertical"
                        android:textSize="21sp"
                        android:textColor="#373737" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EFEFEF"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="?actionBarSize"
                        android:drawableStart="@drawable/ic_group_4464"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:drawablePadding="7dp"
                        android:text="My Delivery Address"
                        android:gravity="center_vertical"
                        android:textSize="21sp"
                        android:textColor="#373737" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EFEFEF"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="?actionBarSize"
                        android:drawableStart="@drawable/ic_group_4465"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:drawablePadding="7dp"
                        android:text="Logout"
                        android:gravity="center_vertical"
                        android:textSize="21sp"
                        android:textColor="#373737"
                        android:layout_marginBottom="45dp" />


                </LinearLayout>
            </ScrollView>


        </androidx.cardview.widget.CardView>

    </RelativeLayout>


</RelativeLayout>

