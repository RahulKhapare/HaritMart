<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ChangePasswordActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/green">

        <FrameLayout
            android:id="@+id/frameView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                app:titleTextColor="@color/white"
                app:subtitleTextColor="@color/white"
                android:theme="@style/ToolbarColoredBackArrow"
                android:background="@color/green">

            </androidx.appcompat.widget.Toolbar>

        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/frameView"
            android:layout_marginTop="10dp"
            android:background="@drawable/product_bg_card">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Password Details"
                        android:textColor="#373737"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/nunit_sans_bold"
                        android:textSize="18sp">

                    </TextView>

                    <EditText
                        android:id="@+id/etxNewPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:hint="New Password"
                        android:imeOptions="actionNext"
                        android:inputType="textPassword"
                        android:fontFamily="@font/nunito_sans_regular"
                        android:backgroundTint="@color/grey2"
                        android:textColorHint="@color/grey2"
                        android:textColor="#373737"/>


                    <EditText
                        android:id="@+id/etxOldPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:imeOptions="actionNext"
                        android:hint="Old Password"
                        android:fontFamily="@font/nunito_sans_regular"
                        android:inputType="textPassword"
                        android:backgroundTint="@color/grey2"
                        android:textColorHint="@color/grey2"
                        android:textColor="#373737"/>


                    <EditText
                        android:id="@+id/etxConfirmPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:hint="Confirm Old Password"
                        android:fontFamily="@font/nunito_sans_regular"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"
                        android:backgroundTint="@color/grey2"
                        android:textColorHint="@color/grey2"
                        android:textColor="#373737"/>


                    <Button
                        android:id="@+id/btnChangePass"
                        android:layout_width="match_parent"
                        android:layout_height="?actionBarSize"
                        android:layout_gravity="center"
                        android:background="@drawable/custom_button"
                        android:text="Change Password"
                        android:textAllCaps="false"
                        android:textColor="#ffffff"
                        android:layout_margin="50dp"
                        android:fontFamily="@font/nunito_sans_semibold"
                        android:textSize="19sp"
                        android:textStyle="normal" />

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </RelativeLayout>

    </RelativeLayout>

</layout>