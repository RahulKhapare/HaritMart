<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_sans_semibold"
            android:textSize="@dimen/iconSize"
            android:textColor="@color/titleColor"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="Sign Out"></TextView>

        <TextView
            android:id="@+id/tV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_sans_semibold"
            android:textSize="@dimen/textSize"
            android:textColor="@color/textColor4"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="Do you really want to sign out ?"
            android:layout_marginTop="@dimen/padding10"></TextView>

        <LinearLayout
            android:layout_width="@dimen/weight240"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/topMargin30"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtYes"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_sans_semibold"
                android:textSize="@dimen/textSizeVerySmall"
                android:textColor="@color/colorPrimaryDark"
                android:padding="@dimen/margin15"
                android:layout_marginRight="10dp"
                android:background="@drawable/grey_green_border"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="YES"></TextView>


            <TextView
                android:id="@+id/txtNo"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin15"
                android:fontFamily="@font/nunito_sans_semibold"
                android:textSize="@dimen/textSizeVerySmall"
                android:layout_marginLeft="10dp"
                android:background="@drawable/custom_button"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="NO"></TextView>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>