<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="15dp"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    android:elevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:weightSum="5"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:text="Terms of Use"
        android:paddingEnd="?actionBarSize"
        android:clickable="true"
        android:layout_marginLeft="15dp"
        android:background="@drawable/clickable_transparent_bg"
        android:fontFamily="@font/nunito_sans_semibold"
        android:textSize="16sp"
        android:layout_weight="4"
        android:textColor="#373737"
        android:gravity="center_vertical"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="?actionBarSize"
        android:layout_height="?actionBarSize"
        android:tag="1"
        android:tint="#373737"
        android:layout_weight="1"
        android:layout_alignParentEnd="true"
        android:padding="12dp"
        android:src="@drawable/ic_baseline_keyboard_arrow_right_24"/>

    </LinearLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/expandableLayout"
    android:layout_below="@+id/linearLayout">
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1.2dp"
        android:background="#E1E1E1"
        />

    <TextView
        android:id="@+id/tV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Copy the following link on the web you will be using this resource. If you want more information read the attribution guide or download the license.Copy the following link on the web you will be using this resource. If you want more information read the attribution guide or download the license."
        android:layout_below="@id/view"
        android:layout_marginTop="4dp"
        android:tag="0"

        android:layout_marginBottom="4dp"
        android:fontFamily="@font/nunito_sans_regular"
        android:textColor="#000000"/>

    <View
        android:id="@+id/v"
        android:layout_width="match_parent"
        android:layout_height="1.2dp"
        android:tag="0"
        android:visibility="gone"
        android:background="#E1E1E1"
        android:layout_marginBottom="6dp"
        android:layout_below="@id/tV"/>

</RelativeLayout>

</RelativeLayout>
