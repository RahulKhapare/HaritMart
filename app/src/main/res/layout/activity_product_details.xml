<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ProductDetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/green">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            app:titleTextColor="@color/white"
            app:subtitleTextColor="@color/white"
            android:theme="@style/ToolbarColoredBackArrow"
            android:background="@color/green">
        </androidx.appcompat.widget.Toolbar>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:background="@drawable/product_bg_card"
            android:layout_below="@+id/toolbar">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:layout_above="@+id/lnrBottom"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:id="@+id/lnrMain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="20dp">

                    <!--                   title data-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txtTitle"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nunit_sans_bold"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:textColor="#373737"
                                android:text="Onion-Medium/Kanda-Madhyam, 1Kg">

                            </TextView>
                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_marginRight="10dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_veg" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_weight="1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/txtAmount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="#373737"
                                        android:maxLines="1"
                                        android:text="Rs.22"
                                        android:textStyle="bold"
                                        android:fontFamily="@font/nunito_sans_semibold"
                                        android:textSize="16sp"></TextView>


                                    <TextView
                                        android:id="@+id/txtProductOff"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:fontFamily="@font/nunito_sans_semibold"
                                        android:maxLines="1"
                                        android:gravity="center_vertical"
                                        android:layout_marginLeft="10dp"
                                        android:text="MRP - Rs.27"
                                        android:textColor="@color/grey1"
                                        android:textSize="12sp"></TextView>

                                    <TextView
                                        android:id="@+id/txtPercent"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/nunito_sans_semibold"
                                        android:maxLines="1"
                                        android:gravity="center_vertical"
                                        android:layout_gravity="center_vertical"
                                        android:text="20% OFF"
                                        android:paddingLeft="5dp"
                                        android:paddingTop="2dp"
                                        android:paddingRight="5dp"
                                        android:paddingBottom="2dp"
                                        android:layout_marginLeft="20dp"
                                        android:background="@drawable/product_bg_child_fill"
                                        android:textColor="@color/white"
                                        android:textSize="5sp"></TextView>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/imgStar1"
                                        android:layout_width="12dp"
                                        android:layout_height="12dp"
                                        android:layout_weight="1"
                                        android:src="@drawable/ic_baseline_star_gray_24">

                                    </ImageView>

                                    <ImageView
                                        android:id="@+id/imgStar2"
                                        android:layout_width="12dp"
                                        android:layout_height="12dp"
                                        android:layout_weight="1"
                                        android:src="@drawable/ic_baseline_star_gray_24">

                                    </ImageView>

                                    <ImageView
                                        android:id="@+id/imgStar3"
                                        android:layout_width="12dp"
                                        android:layout_height="12dp"
                                        android:layout_weight="1"
                                        android:src="@drawable/ic_baseline_star_gray_24">

                                    </ImageView>

                                    <ImageView
                                        android:id="@+id/imgStar4"
                                        android:layout_width="12dp"
                                        android:layout_height="12dp"
                                        android:layout_weight="1"
                                        android:src="@drawable/ic_baseline_star_gray_24">

                                    </ImageView>

                                    <ImageView
                                        android:id="@+id/imgStar5"
                                        android:layout_width="12dp"
                                        android:layout_height="12dp"
                                        android:layout_weight="1"
                                        android:src="@drawable/ic_baseline_star_gray_24">

                                    </ImageView>

                                </LinearLayout>

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/nunito_sans_semibold"
                                android:maxLines="1"
                                android:gravity="center_vertical"
                                android:text="( Inclusive all of taxes )"
                                android:textColor="@color/grey1"
                                android:textSize="12sp"></TextView>

                        </LinearLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <androidx.viewpager.widget.ViewPager
                                android:id="@+id/pager"
                                android:layout_width="match_parent"
                                android:layout_height="200dp" />

                            <com.google.android.material.tabs.TabLayout
                                android:layout_below="@+id/pager"
                                android:id="@+id/tabLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="-10dp"
                                app:tabBackground="@drawable/tab_selected"
                                app:tabGravity="center"
                                app:tabIndicatorHeight="0dp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"
                                android:orientation="horizontal"
                                android:padding="10dp">

                                <ImageView
                                    android:id="@+id/imgLike"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:tint="@color/colorPrimaryDark"
                                    android:src="@drawable/ic_baseline_favorite_1"></ImageView>

                                <ImageView
                                    android:id="@+id/imgShare"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_marginLeft="10dp"
                                    android:tint="@color/colorPrimaryDark"
                                    android:src="@drawable/ic_baseline_share_24"></ImageView>

                            </LinearLayout>
                        </RelativeLayout>


                    </LinearLayout>
                    <!--                   end title data-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/black"></LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunit_sans_bold"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:textColor="#373737"
                            android:text="Select Quantity"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_marginTop="10dp"
                            android:id="@+id/recyclerQuantityView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </androidx.recyclerview.widget.RecyclerView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunit_sans_bold"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:textColor="#373737"
                            android:text="About this product"/>

                        <TextView
                            android:id="@+id/txtAbout"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/nunito_sans_semibold"
                            android:maxLines="1"
                            android:gravity="center_vertical"
                            android:text=""
                            android:textColor="@color/grey1"
                            android:textSize="12sp"></TextView>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunit_sans_bold"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:textColor="#373737"
                            android:text="Nutritional Facts"/>

                        <TextView
                            android:id="@+id/txtFact"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/nunito_sans_semibold"
                            android:maxLines="1"
                            android:gravity="center_vertical"
                            android:text=""
                            android:textColor="@color/grey1"
                            android:textSize="12sp"></TextView>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nunit_sans_bold"
                                android:text="Frequently Bought Together"
                                android:gravity="center_vertical"
                                android:textColor="#373737"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/viewMoreTrending"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginEnd="15dp"
                                android:fontFamily="@font/nunito_sans_regular"
                                android:gravity="end|center_vertical"
                                android:text="View More"
                                android:textColor="#FC8F00"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_marginTop="10dp"
                            android:id="@+id/recyclerTrending"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </androidx.recyclerview.widget.RecyclerView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nunit_sans_bold"
                                android:text="Most Popular"
                                android:gravity="center_vertical"
                                android:textColor="#373737"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/viewMorePopular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginEnd="15dp"
                                android:fontFamily="@font/nunito_sans_regular"
                                android:gravity="end|center_vertical"
                                android:text="View More"
                                android:textColor="#FC8F00"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_marginTop="10dp"
                            android:id="@+id/recyclerPopular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </androidx.recyclerview.widget.RecyclerView>
                    </LinearLayout>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

            <LinearLayout
                android:id="@+id/lnrBottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/product_bg_card_semi">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:layout_marginRight="40dp"
                    android:layout_marginLeft="40dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:padding="20dp"
                    android:text="Add to cart"
                    android:background="@drawable/custom_button"></Button>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>
</layout>